
@{
    ViewData["Title"] = "Index";
    Layout = "EMP_Table_List";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Tax Slab Table </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee Table</li>*@
                </ol>
            </nav>
            <div class="mt-3">
                <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="@Url.Action("Index","Tax_Slab")">Tax Slab</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tax Slab</h4>

                        <table class="table table-striped table-responsive" id="zero_config">
                            <thead>
                                <tr>
                                    <th> S/No. </th>
                                    <th>Year</th>
                                    <th>Floor Amount</th>
                                    <th>Ceiling Amount</th>
                                    <th>Tax Amount</th>
                                    <th>Tax Percent</th>
                                    <th> Update </th>
                                    <th> Delete </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;
                                }

                                @foreach (var s in ViewBag.tax_sl_list as List<Hospital_Payroll.Models.Tax_Slab>)
                                {
                                <tr>
                                    <td>@count</td>
                                    <td>@s.ts_Year</td>
                                    <td>@s.Floor_Amount</td>
                                    <td>@s.Ceiling_Amount</td>
                                    <td>@s.Tax_Amount</td>
                                    <td>@s.Tax_Percent</td>
                                    <td><a href="@Url.Action("Index","Update_TaxSlab",new { id= s.Ts_id })" class="butn btn-warning"><i class="mdi mdi-table-edit"></i></a> </td>
                                    <td><a href="@Url.Action("Index","Delete_TaxSlab",new { id= s.Ts_id })" class="butn btn-danger"><i class="mdi mdi-delete"></i></a> </td>
                                </tr>
                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

<style>
    .butn {
        padding: 8px;
    }
</style>