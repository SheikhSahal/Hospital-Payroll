
@{
    ViewData["Title"] = "Index";
    Layout = "EMP_Table_List";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Leave Deduction Table </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Employee Table</li>*@
                </ol>
            </nav>
            <div class="mt-3">
                <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="@Url.Action("Index","LeaveDeduction")">Leave Deduction</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Leave Deduction</h4>
                       
                        <table class="table table-striped table-responsive" id="zero_config">
                            <thead>
                                <tr>
                                    <th> S/No. </th>
                                    <th> Name </th>
                                    <th> Leave Days </th>
                                    <th> From Date </th>
                                    <th> To Date </th>
                                    <th> Leave Deduction </th>
                                    <th> Update </th>
                                    <th> Delete </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;
                                }

                                @foreach (var s in ViewBag.leavelist as List<Hospital_Payroll.Models.LeaveDeduction>)
                                {
                                <tr>
                                    <td>@count</td>
                                    <td>@s.Name</td>
                                    <td>@s.Leave_Days</td>
                                    <td>@s.From_Date</td>
                                    <td>@s.To_Date</td>
                                    <td>@s.Leave_Deduction</td>
                                    <td><a href="@Url.Action("Index","Update_LeaveDeduction",new { id= s.Emp_id })" class="butn btn-warning"><i class="mdi mdi-table-edit"></i></a> </td>
                                    <td><a href="@Url.Action("Index","DeleteEMP",new { id= s.Emp_id })" class="butn btn-danger"><i class="mdi mdi-delete"></i></a> </td>

                                </tr>
                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

<style>
    .butn{
        padding:8px;
    }
</style>