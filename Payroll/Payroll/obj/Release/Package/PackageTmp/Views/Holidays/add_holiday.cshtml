
@{
    ViewBag.Title = "add_holiday";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="success-message">
                    @Html.Partial("~/Views/Shared/Sucess_Alert.cshtml")
                </div>

                <form action="#">
                    <div class="card-box">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="card-title">Holidays</h4>
                                <div class="form-group Holiday_Date">
                                    <label>Holiday Date:</label>
                                    @*<input type="date" class="form-control" id="Holiday_Date" min="@DateTime.Now.ToString("yyyy-MM-dd")">*@
                                    <input type="date" class="form-control" id="Holiday_Date" >
                                    <span class="error"><i class="fa fa-exclamation-circle"></i>&nbsp; Enter Holiday Date</span>
                                </div>

                                <div class="form-group Reason">
                                    <label>Holiday Reason:</label>
                                    <input type="text" class="form-control" id="Reason">
                                    <span class="error"><i class="fa fa-exclamation-circle"></i>&nbsp; Enter Reason</span>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary" id="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    span.error {
        display: none;
        color: #d93025;
        font-size: 80%;
        margin-top: 3px;
    }

    .Emailvalidate {
        display: none;
        color: #d93025;
        font-size: 80%;
        margin-top: 3px;
    }
</style>

<script src="~/Content/assets/js/Jquery3.6.1.js"></script>
<script>
    $(document).ready(function () {

        $('#submit').click(function (e) {
            e.preventDefault();
            var isAllValid = true;

            if (!($('#Holiday_Date').val().trim() != '')) {
                isAllValid = false;
                $('.Holiday_Date .error').css('display', 'block');
            }
            else {
                $('.Holiday_Date .error').css('display', 'none');
            }

            if (!($('#Reason').val().trim() != '')) {
                isAllValid = false;
                $('.Reason .error').css('display', 'block');
            }
            else {
                $('.Reason .error').css('display', 'none');
            }


            if (isAllValid) {
                $('#submit').prop('disabled', true);

                var data = {
                    Holidays_Date: $('#Holiday_Date').val(),
                    Reason: $('#Reason').val(),
                }

                debugger
                $.ajax({
                    type: 'POST',
                    url: '/Holidays/add_holiday',
                    data: {
                        'Holidays_Date': data.Holidays_Date,
                        'Reason': data.Reason,
                      
                    }
                    ,
                    success: function (resp) {
                        if (resp.status) {
                            $('.success-message').delay(1000).fadeIn();
                            $('.success-message').delay(1000).fadeOut();
                            $('#Holidays_Date,	#Reason').val('');
                            $('#submit').prop('disabled', false);

                        }
                    }
                });
            }


        });


    });
</script>
<style>
    .success-message {
        display: none;
    }
</style>