
@{
    ViewBag.Title = "Index";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Employee</h4>
            </div>
            <div class="col-sm-8 col-9 text-right m-b-20">
                <a href="@Url.Action("Add_Employee","Employee_list")" class="btn btn-primary float-right btn-rounded"><i class="fa fa-plus"></i> Add Employee</a>
            </div>
        </div>

        <div class="row">
            <input id="myInput" type="text" placeholder="Search..">
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="datatable table table-stripped" id="secondTableId">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Father Name</th>
                                <th>C.N.I.C</th>
                                <th>Phone</th>
                                <th>Gender</th>

                            </tr>
                        </thead>
                        <tbody id="myTable">
                            @{int index = 1;}
                            @foreach (var s in ViewBag.emplist as List<Payroll.Models.Employee>)
                            {
                                <tr>
                                    <td>@s.Emp_id</td>
                                    <td class="collapse">
                                        <input type="hidden" class="emp-id" value="@s.Emp_id" />
                                    </td>
                                    <td>@s.Name</td>
                                    <td>@s.Father_Name</td>
                                    <td>@s.CNIC</td>
                                    <td>@s.Phone</td>
                                    @if (s.Gender == "M")
                                    {
                                        <td>Male</td>
                                    }
                                    else
                                    {
                                        <td>Female</td>
                                    }
                                    <td>
                                        <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="@Url.Action("Update_Employee", "Employee_list", new { id = s.Emp_id })"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item delete_bf_alert" href="#" data-toggle="modal" data-target="#delete_employee"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                    </td>
                                </tr>
                                index++;
                            }


                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </div>
    <div id="delete_employee" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="~/Content/assets/img/sent.png" alt="delete" width="50" height="46" />
                    <h3>Are you sure want to delete this Employee?</h3>
                    <div class="m-t-20">
                        <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                        <button type="button" id="alert_Delete_btn" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/assets/js/Jquery3.6.1.js"></script>
<script>
    $(document).ready(function () {

        
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        

        var UrlAction = "";
        $('.delete_bf_alert').click(function () {
            var row = $(this).parent().parent().parent().parent("tr");
            var rowtwo = row.find('.emp-id').val();
            UrlAction = rowtwo;
        });

        $('#alert_Delete_btn').click(function () {
            window.location.href = '/Employee_List/Delete_Employee/' + UrlAction;
        });

    });
</script>