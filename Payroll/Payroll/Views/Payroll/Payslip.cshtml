
@{
    ViewBag.Title = "Payslip";
    var Data = ViewBag.payslip_data as Payroll.Models.Fn_Payroll_Model;
    Layout = "~/Views/Shared/Payslip.cshtml";
}


<div class="payslip-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-5 col-4">
                <h4 class="page-title"><strong>Payslip</strong> </h4>
            </div>
            <div class="col-sm-7 col-8 text-right m-b-30">
                <div class="btn-group btn-group-sm">
                    @*<button class="btn btn-white">CSV</button>
                    <button class="btn btn-white">PDF</button>*@
                    <button class="btn btn-white print-btn" onclick="window.print()"><i class="fa fa-print fa-lg"></i> Print</button>
                </div>
            </div>
        </div>
        <div class="row" id="payslip">
            <div class="col-md-12">
                <div class="card-box">
                    <h4 class="payslip-title"><strong> Payslip for the month of @Data.Payroll_date.ToString("MMMM, yyyy") </strong></h4>
                    <div class="row">
                        <div class="col-sm-6 m-b-20">
                            <img src="assets/img/logo-dark.png" class="inv-logo" alt="">
                            <ul class="list-unstyled mb-0">
                                <li><strong>Payroll</strong> </li>
                                @*<li><strong>@Data.Email</strong></li>
                                <li><strong>@Data.Designation</strong></li>*@
                            </ul>
                        </div>
                        <div class="col-sm-6 m-b-20">
                            <div class="invoice-details">
                                <h3 class="text-uppercase"><strong>Employee ID # @Data.Emp_id</strong> </h3>
                                <ul class="list-unstyled">
                                    <li><strong>Salary Month: <span>@Data.Payroll_date.ToString("MMMM, yyyy")</span></strong> </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 m-b-20">
                            <ul class="list-unstyled">
                                <li >
                                    <h5 class="mb-0"><strong>@Data.Name</strong></h5>
                                </li>
                                <li><strong>@Data.Email</strong> </li>
                                <li><strong>@Data.Designation</strong> </li>
                                <li style="font-size:15px; font-weight:bold;">Basic Salary: <strong id="Total_Month"></strong> </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <h4 class="m-b-10"><strong>Earnings</strong></h4>
                                <table class="table table-bordered">
                                    <tbody style="font-weight:bold;">
                                        <tr>
                                            <td><strong>Overtime Earning</strong> 
                                            <span class="float-right" id="overtime_sal">@*@Data.Overtime_Hour_Salary*@
                                            </span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Leaves</strong> 
                                            <span class="float-right" id="Leave"></span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Holidays</strong>
                                             <span class="float-right" id="holidays"></span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Earning</strong> 
                                            <span class="float-right" id="earning"></span></td>
                                        </tr>
                                        @*<tr>
                                            <td><strong>Working Hours</strong> <span class="float-right">@Data.Current_Salary_Hours</span></td>
                                        </tr>

                                        <tr>
                                            <td><strong>Over-Time</strong> <span class="float-right">@Data.Overtime_Amount</span></td>
                                        </tr>*@
                                        @*<tr>
        <td><strong>Other Allowance</strong> <span class="float-right">$55</span></td>
    </tr>
    <tr>
        <td><strong>Total Earnings</strong> <span class="float-right"><strong>$55</strong></span></td>
    </tr>*@
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div>
                                <h4 class="m-b-10"><strong>Deductions</strong></h4>
                                <table class="table table-bordered">
                                    <tbody>
                                        @*<tr>
                                            <td><strong>Abcent Days</strong> <span class="float-right">@Data.Abcent</span></td>
                                        </tr>*@
                                        <tr>
                                            <td><strong>Late Deduction</strong> 
                                            <span class="float-right" id="late_d"></span></td>
                                        </tr>
                                        @*<tr>
                                            <td><strong>Advance Tax</strong> <span class="float-right">@Data.Adv_Staff</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>I.Tax</strong> <span class="float-right">@Data.I_tax</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Telephone</strong> <span class="float-right">@Data.Telephone</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>EOBI</strong> <span class="float-right">@Data.EOBI</span></td>
                                        </tr>*@
                                        @*<tr>
            <td><strong>Provident Fund</strong> <span class="float-right">$0</span></td>
        </tr>
        <tr>
            <td><strong>ESI</strong> <span class="float-right">$0</span></td>
        </tr>
        <tr>
            <td><strong>Loan</strong> <span class="float-right">$300</span></td>
        </tr>
        <tr>
            <td><strong>Total Deductions</strong> <span class="float-right"><strong>$59698</strong></span></td>
        </tr>*@
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <p style="font-size:30px;">Net Salary:<strong id="net-sal"></strong> 
                            @*(Fifty nine thousand six hundred and ninety eight only.)*@
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Content/assets/js/Jquery3.6.1.js"></script>
<script>
    $(document).ready(function () {

        addcomval('overtime_sal',@Data.Overtime_Hour_Salary);
        addcomval('Leave',@Data.Leave_Hours_Salary);
        addcomval('holidays',@Data.Holidays_Hours_Salary);
        addcomval('earning',@Data.Employee_Get_salary_perM);
        addcomval('late_d',@Data.Late_Hour_Salary);
        addcomval('net-sal',@Data.Total_Gross);
        addcomval('Total_Month',@Data.Total_Monthly_Salary);

        function addcomval(id,val){
            var a = val;
            $('#'+id).text(a.toLocaleString())
        }
    });
</script>

